<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.search.list.ListFragment">

    <data>
        <variable
            name="event"
            type="com.prokarma.reference.architecture.model.Event" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/detail_event_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            app:imageUrl="@{event.images.get(0).url}"/>
        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@{event.name}"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_image"
            tools:text="@string/sample_event_title"
            android:layout_marginTop="@dimen/view_margin_small"
            android:padding="@dimen/view_margin_small"/>
        <TextView
            android:id="@+id/detail_event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@{event.dates.start.localDate}"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/sample_event_date"
            android:layout_marginTop="@dimen/view_margin_small"
            android:paddingLeft="@dimen/view_margin_small"
            android:paddingRight="@dimen/view_margin_small"
            android:paddingBottom="@dimen/view_margin_small"/>
        <!--<fragment-->
            <!--android:id="@+id/map"-->
            <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_constraintTop_toBottomOf="@id/detail_event_date"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--tools:context=".app.MainActivity"-->
            <!--/>-->
    </android.support.constraint.ConstraintLayout>
</layout>