<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.search.list.ListFragment">

    <data>
        <variable
            name="event"
            type="com.prokarma.reference.architecture.model.Event" />
        <variable
            name="report"
            type="com.prokarma.reference.architecture.model.WeatherReport"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/detail_event_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            app:imageUrl="@{event.images.get(0).url}"/>
        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@{event.name}"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_image"
            tools:text="@string/sample_event_title"
            android:layout_marginTop="@dimen/view_margin_small"
            android:padding="@dimen/view_margin_small"/>
        <TextView
            android:id="@+id/detail_event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@{event.dates.start.localDate}"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/sample_event_date"
            android:layout_marginTop="@dimen/view_margin_small"
            android:paddingLeft="@dimen/view_margin_small"
            android:paddingRight="@dimen/view_margin_small"
            android:paddingBottom="@dimen/view_margin_small"/>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/weather_report"
            tools:context=".app.MainActivity"
            />
        <RelativeLayout
            android:id="@+id/weather_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map"
            >
            <TextView
                android:id="@+id/weather_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_forecast_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/view_margin_small"
                android:padding="@dimen/view_margin_small"/>
            <TextView
                android:id="@+id/weather_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/temperature_format(report.maxTempInFahrenheit)}"
                tools:text="@string/sample_weather_max_temp"
                android:textSize="16sp"
                android:layout_below="@id/weather_title"
                android:padding="@dimen/view_margin_small"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/weather_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/temperature_format(report.minTempInFahrenheit)}"
                tools:text="@string/sample_weather_min_temp"
                android:textSize="16sp"
                android:layout_below="@id/weather_title"
                android:layout_toEndOf="@id/weather_max_temp"
                android:padding="@dimen/view_margin_small"/>
            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/weather_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                app:imageUrl="@{report.iconUrl}" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>